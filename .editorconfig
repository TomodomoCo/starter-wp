indent_size = 4
trim_trailing_whitespace = true

[*.yml]
indent_style = space
indent_size = 2

[*.rb]
indent_style = space
indent_size = 2

[{Guardfile,Vagrantfile,Capfile,Gemfile}]
indent_style = space
indent_size = 2
