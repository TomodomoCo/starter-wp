source :rubygems

gem "capistrano"

group :development do
  # Compass
  gem "compass"
  gem "oily_png"
  gem "css_parser"

  # Sass 3.2+ and Sass plugins
  gem "sass", "~>3.2.0.alpha"
  gem "sass-globbing"

  # Compass plugins
  gem "compass-rgbapng"
  gem "compass-validator"

  # JavaScript
  gem "jammit"
  gem "therubyracer"
  gem "uglifier"

  # Guard
  gem "guard-compass", :git => "git://github.com/chrisvanpatten/guard-compass.git", :branch => "patch-1"
  gem "guard-livereload"
  gem "guard-jammit"
  gem "yajl-ruby"
end