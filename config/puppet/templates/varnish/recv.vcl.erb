if (req.http.host ~ "<%= site_domain %>$") {

	<% if app_stage == 'dev' %>
	return(pass);
	<% end %>

	# Drop any cookies sent to WordPress, except wordpress_ cookies
	if (!(req.url ~ "wp-(login|admin|comments-post)") && !(req.http.Cookie ~ "wordpress_")) {
		remove req.http.Cookie;
	} 

}
